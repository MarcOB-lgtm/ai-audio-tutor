{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AI Audio Lesson",
  "type": "object",
  "required": ["lesson_id", "title", "level", "language", "duration_sec", "speaker", "segments"],
  "properties": {
    "lesson_id": { "type": "string", "pattern": "^lesson_[0-9]{3,}$" },
    "title": { "type": "string", "minLength": 3 },
    "level": { "type": "string", "enum": ["beginner", "intermediate", "advanced"] },
    "language": { "type": "string", "pattern": "^[a-z]{2}(-[A-Z]{2})?$" },
    "duration_sec": { "type": "number", "minimum": 1 },
    "speaker": { "type": "string", "minLength": 1 },
    "transcript": { "type": "string" },
    "audio_file": { "type": "string", "pattern": "\\.mp3$|\\.wav$|\\.m4a$" },
    "recording_date": { "type": "string", "format": "date" },
    "segments": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["start_sec", "end_sec", "text"],
        "properties": {
          "start_sec": { "type": "number", "minimum": 0 },
          "end_sec": { "type": "number", "minimum": 0 },
          "text": { "type": "string", "minLength": 1 }
        }
      }
    }
  },
  "additionalProperties": false
}
